pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "eu-central-1"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Chrisblurp/dms_migration.git'
            }
        }

        stage('Terraform') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws_access_key')
                AWS_SECRET_ACCESS_KEY = credentials('aws_secret_key')
            }

            stages {

                stage('Init') {
                    steps {
                        powershell 'terraform init -input=false'
                    }
                }

                stage('Format') {
                    steps {
                        powershell 'terraform fmt -check'
                    }
                }

                stage('Validate') {
                    steps {
                        powershell 'terraform validate'
                    }
                }

                stage('Plan') {
                    steps {
                        powershell 'terraform plan -out=tfplan'
                    }
                }

                stage('Approval') {
                    steps {
                        script {
                            timeout(time: 10, unit: 'MINUTES') {
                                input message: "Apply Terraform changes?"
                            }
                        }
                    }
                }

                stage('Apply') {
                    steps {
                        powershell 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Terraform apply completed successfully."
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
